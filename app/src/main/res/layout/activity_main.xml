<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".views.MainActivity">


    <TextView
        android:id="@+id/app_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:layout_margin="20dp"
        android:textSize="22sp"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/search_user"
        android:layout_width="266dp"
        android:layout_height="34dp"
        android:layout_margin="20dp"
        android:background="#ffff"
        android:hint="@string/search_for_users_by_username"
        android:textColor="@color/backgroundColor"
        app:layout_constraintEnd_toStartOf="@+id/searchRepoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title_textView" />

    <Button
        android:id="@+id/searchRepoButton"
        android:layout_width="94dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:text="@string/search"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_user"


        app:layout_constraintTop_toBottomOf="@+id/app_title_textView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/users_listView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_user"
        />





</androidx.constraintlayout.widget.ConstraintLayout>